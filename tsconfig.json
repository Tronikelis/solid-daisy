{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "moduleResolution": "Bundler",
        "module": "ESNext",

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noEmit": true,
        "noUncheckedIndexedAccess": true,

        "jsx": "preserve",

        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",

        "jsxImportSource": "solid-js",

        "types": ["@testing-library/jest-dom/vitest"],

        "paths": {
            "~/*": ["./*"]
        }
    },

    "include": ["./src"]
}
